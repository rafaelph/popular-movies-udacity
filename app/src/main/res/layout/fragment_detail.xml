<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rafael.popularmovies.detail.DetailActivityFragment"
    tools:showIn="@layout/content_detail">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/movie_title_place_holder"
        android:id="@+id/movieTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#11aa77"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:padding="10dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="185dp"
        android:id="@+id/movieThumbnailView"
        android:background="@color/switch_thumb_disabled_material_light"
        android:layout_margin="20dp"
        android:layout_below="@+id/movieTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/year_placeholder"
        android:id="@+id/yearText"
        android:layout_alignTop="@+id/movieThumbnailView"
        android:layout_toRightOf="@+id/movieThumbnailView"
        android:layout_toEndOf="@+id/movieThumbnailView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/runtime_placeholder"
        android:id="@+id/runtimeText"
        android:layout_below="@+id/yearText"
        android:layout_toRightOf="@+id/movieThumbnailView"
        android:layout_toEndOf="@+id/movieThumbnailView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/synopsis_placeholder"
        android:id="@+id/synopsisText"
        android:layout_margin="10dp"
        android:layout_below="@+id/movieThumbnailView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
